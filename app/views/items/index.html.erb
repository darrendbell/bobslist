<div class="container">
  <div class="row">
    <h1 class="page-header text-center">Items</h1>

    <table class="table table-hover">
      <tr> 
        <th>Image</th>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Category</th>
        <th>View</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
      <% @items.each do |item| %>
       <tr>
          <td> <%= image_tag item.image.url(:thumb) %> </td>
          <td> <%= item.name %> </td>
          <td> <%= item.description %> </td>
          <td> $<%= item.price %> </td>
          <td> <%= item.category_id %> </td>
          <td>
            <%= link_to item_path(item.id), class: "btn btn-info" do %>
              <i class="glyphicon glyphicon-eye-open"></i>
            <% end %> 
          </td>
          <td>
            <%= link_to edit_item_path(item.id), class: "btn btn-default" do %>
              <i class="glyphicon glyphicon-pencil"></i>
            <% end %>
          </td>
          <td>
            <%= link_to item_path(item.id), method: :delete, class: "btn btn-warning" do %>
              <i class="glyphicon glyphicon-trash"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
       
  </div>
</div>
