<div class="container">
  <div class="row">
    <h1 class="page-header text-center">Items</h1>

    <%= link_to('create new item', new_item_path) %>

    <table class="table table-hover table-bordered">
      <tr> 
        <th>Image</th>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Category</th>
        <th>Edit</th>
        <th>View</th>
        <th>Delete</th>
      </tr>
      <% @items.each do |item| %>
       <tr>
          <td> <%= image_tag item.image.url(:thumb) %> </td>
          <td> <%= item.name %> </td>
          <td> <%= item.description %> </td>
          <td> $<%= item.price %> </td>
          <td> <%= item.category_id %> </td>
          <td><%= link_to('Edit this item', edit_item_path(item.id)) %></td>
          <td><%= link_to('View this item', item_path(item.id)) %></td>
          <td><%= link_to('delete this item', item_path(item.id), method: :delete) %></td>
        </tr>
      <% end %>
    </table>
       
  </div>
</div>
